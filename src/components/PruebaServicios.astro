---
const {
  title,
  rutaDeImagen,
  rutaDeImagen2,
  rutaDeImagen3,
  rutaDeImagen4,
  parrafo,
  parrafo2,
  parrafo3,
  parrafo4,
} = Astro.props;
---

<div class="section-servicios">
  <h2>{title}</h2>
  <div class="main-servicios">
    <div class="servicios">
      <div class="iconBox">
        <div class="prueba">
          <img src={rutaDeImagen} alt="" />
        </div>
        <a href="/rutacol/nuestras-rutas"><p>{parrafo}</p></a>
      </div>
      <div class="iconBox">
        <div class="crea">
          <img src={rutaDeImagen2} alt="" />
        </div>
        <a href="/rutacol/tu-ruta"><p>{parrafo2}</p></a>
      </div>
      <div class="iconBox">
        <div class="filtra">
          <img src={rutaDeImagen3} alt="" />
        </div>
        <a href=""><p>{parrafo3}</p></a>
      </div>
      <div class="iconBox">
        <div class="incluye">
          <img src={rutaDeImagen4} alt="" />
        </div>
        <a href="/rutacol/ruta-negocios"><p>{parrafo4}</p></a>
      </div>
    </div>
  </div>
  <style>
    .section-servicios {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-family: var(--type-typography);
      justify-content: center;
      width: 100%;
      gap: 23px;
    }
    .section-servicios a {
      list-style: none;
      text-decoration: none;
    }
    .servicios {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      width: 100%;
      height: 237px;
      padding-bottom: 80px;
    }
    .section-servicios h2 {
      padding-top: 80px;
    }
    h2 {
      width: 650px;
      height: 72px;
      font-style: normal;
      font-weight: 700;
      font-size: 48px;
      line-height: 72px;
      color: var(--sixth-color-blue);
    }
    .iconBox {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 16px;
      gap: 16px;
      width: 200px;
      height: 214px;
    }
    .iconBox div {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 120px;
      height: 120px;
      border-radius: 50%;
    }
    .iconBox p {
      display: flex;
      align-items: center;
      text-align: center;
      justify-content: center;
      width: 168px;
      height: 46px;
      font-style: normal;
      font-weight: 700;
      font-size: 20px;
      line-height: 23px;
      color: var(--fifth-color-grey);
    }
    .prueba {
      background-color: var(--Primary-color-yellow);
    }
    .crea {
      background-color: var(--secondary-color-orange);
    }
    .filtra {
      background-color: var(--sixth-color-blue);
    }
    .incluye {
      background-color: var(--seventh-color-pink);
    }
  </style>
</div>
